<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jjn.DashboardController"
            style="-fx-background-color: #0A0A0A;">

    <!-- CABECERA -->
    <top>
        <VBox style="-fx-background-color: #111111; -fx-padding: 30 40; -fx-alignment: CENTER_LEFT;">
            <Label fx:id="lblUsuarioYRol"
                   text="USUARIO - ROL"
                   style="-fx-text-fill: #FFD700; -fx-font-size: 34px; -fx-font-weight: bold;"/>
            <Separator prefWidth="2000" style="-fx-background: #333333;"/>
        </VBox>
    </top>

    <!-- MENÚ LATERAL -->
    <left>
        <VBox fx:id="sidebar"
              style="-fx-background-color: #111111; -fx-padding: 20; -fx-spacing: 15; -fx-pref-width: 80;">
            <!-- Los botones se añaden desde el controlador -->
        </VBox>
    </left>

    <!-- ÁREA CENTRAL -->
    <center>
        <ScrollPane fx:id="contentArea" fitToWidth="true" fitToHeight="true"
                    style="-fx-background: #0F0F0F;">
            <StackPane>
                <Label text="Selecciona una opción"
                       style="-fx-text-fill: #666666; -fx-font-size: 28px;"/>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>