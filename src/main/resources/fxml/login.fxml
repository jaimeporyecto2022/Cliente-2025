<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jjn.LoginController"
      alignment="CENTER"
      spacing="25"
      style="-fx-background-color: #0F0F0F;">

    <padding>
        <Insets top="80" right="100" bottom="80" left="100"/>
    </padding>

    <!-- TÍTULO -->
    <Label text=" Cliente Proyecto JJN"
           style="-fx-text-fill: #FFD700; -fx-font-size: 72px;">
        <font>
            <Font name="System Bold" size="72"/>
        </font>
    </Label>

    <Label text="Login"
           style="-fx-text-fill: #888888; -fx-font-size: 18px;"/>

    <Separator prefWidth="400" style="-fx-background: #333333;"/>

    <!-- CAMPOS -->
    <TextField fx:id="tfUsuario"
               promptText="Usuario"
               prefWidth="400" prefHeight="50"
               style="-fx-background-color: #1E1E1E; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 10; -fx-font-size: 16px;"/>

    <PasswordField fx:id="pfPassword"
                   promptText="Contraseña"
                   prefWidth="400" prefHeight="50"
                   style="-fx-background-color: #1E1E1E; -fx-text-fill: white; -fx-prompt-text-fill: #666666; -fx-background-radius: 10; -fx-font-size: 16px;"/>

    <!-- BOTÓN -->
    <Button text="ACCEDER"
            prefWidth="400" prefHeight="60"
            style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"
            onAction="#handleLogin"/>
    <Label fx:id="lblMensaje" text="" style="-fx-text-fill: #FF4444; -fx-font-size: 14px;"/>

    <Label text="© 2025 JJN Cliente - Todos los derechos reservados"
           style="-fx-text-fill: #444444; -fx-font-size: 12px;"
           VBox.vgrow="ALWAYS"/>
</VBox>